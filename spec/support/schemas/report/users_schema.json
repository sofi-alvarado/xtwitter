{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "description": "A user of Xwitter application",
    "type": "object",
    "properties": {
      "id": {
        "description": "A unique identifier for a User",
        "type": "integer"
      },
      "name": {
        "description": "Name of the user, can be optional",
        "type": "string"
      },
      "username": {
        "description": "username for the user, serve as unique identifier",
        "type": "string"
      },
      "bio": {
        "description": "Biography of the user",
        "type": ["string", "null"]
      },
      "location": {
        "description": "Location of the user",
        "type": ["string", "null"]
      },
      "link": {
        "description": "Any link the user wants to add to its profile",
        "type": ["string", "null"]
      },
      "email": {
        "description": "email adress of the user",
        "type": "string"
      },
      "password": {
        "description": "password of the user",
        "type": "string"
      },
      "lastname": {
        "description": "lastname of the user, can be optional",
        "type": ["string", "null"]
      },
      "followers": {
        "description": "the count of followers a user has",
        "type": "integer"
      },
      "followings": {
        "description": "the count of followings a user follows",
        "type": "integer"
      }
    },
    "required": [
      "id",
      "username",
      "email",
      "password",
      "followers",
      "followings"
    ]
  }