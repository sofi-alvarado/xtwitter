<!DOCTYPE html>
<html>
  <head>
    <title>Xwitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
  <div class="container">
  <div class="row">
    <div class="col-md-3 sidebar">
      <ul>
        <li><%= link_to(web_tweets_path) do %><i class="fas fa-home fa-lg"></i> Home <% end %></li>
            <% if user_signed_in? %>
              <li>
                <%= link_to web_user_path(current_user) do %><i class="fas fa-user fa-lg"></i> Profile <% end %>
              </li>
              <li><%= link_to("Post", new_web_tweet_path, class: "btn btn-custom btn-post")%></li>
              <li><i class="fas fa-user fa-lg"></i><%= current_user.username%></li>
            <% end %>
      </ul>
    </div>
    <div class="col-md-9">
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
</div>
  </body>
</html>
