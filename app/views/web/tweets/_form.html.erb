      <ul>
        <% @tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card">
        <div class="card-body p-4">
           <h5 class="mt-0"><i class="fas fa-user fa-lg"></i> <strong> <%= tweet.user.name %> </strong> <%= tweet.user.username %></h5>
          <%= form_for(@tweet, url: web_tweets_path) do |f| %>
            <div class="form-group">
              <%= form.hidden_field  :user_id %>
              <%= form.hidden_field :retweet_id %>
              <%= form.hidden_field :quote_id %>
              <%= form.hidden_field :quote %>
              <%= f.text_area :content, placeholder: "What's happening?", class: "form-control", rows: 3 %>
            </div>
            <div class="form-group">
              <%= f.submit "Post", class: "btn-custom" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
