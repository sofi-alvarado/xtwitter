<div class="container">
  <div id="<%= dom_id user %>">
    <h2>User Profile</h2>

    <dl class="row">
      <dt class="col-sm-3"><strong>Name:</strong></dt>
      <dd class="col-sm-9"><%= user.name %></dd>

      <dt class="col-sm-3"><strong>Lastname:</strong></dt>
      <dd class="col-sm-9"><%= user.lastname %></dd>

      <dt class="col-sm-3"><strong>Username:</strong></dt>
      <dd class="col-sm-9"><%= user.username %></dd>

      <dt class="col-sm-3"><strong>Bio:</strong></dt>
      <dd class="col-sm-9"><%= user.bio %></dd>

      <dt class="col-sm-3"><strong>Location:</strong></dt>
      <dd class="col-sm-9"><%= user.location %></dd>

      <dt class="col-sm-3"><strong>Email:</strong></dt>
      <dd class="col-sm-9"><%= user.email %></dd>
    </dl>
  </div>
</div>
